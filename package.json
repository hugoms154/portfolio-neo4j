{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "yarn run resolve-ts-alias && yarn run copy-resources",
    "resolve-ts-alias": "yarn tsc-alias -p tsconfig.build.json",
    "copy-resources": "copyup 'src/**/*.graphql' 'dist/'",
    "start": "node dist/main/index.js",
    "dev": "nodemon -r tsconfig-paths/register ./src/main/index.ts --config ./nodemon.json",
    "dev:debug": "DEBUG=@neo4j/graphql:* yarn run dev --debug",
    "core-api:generate-types": "GENERATE=true npx ts-node --project ./tsconfig.json ./src/main/scripts/generate-types.ts"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.6",
    "@neo4j/graphql": "^3.0.2",
    "@neo4j/graphql-ogm": "^3.0.2",
    "apollo-server": "^3.6.5",
    "apollo-server-core": "^3.6.5",
    "apollo-server-express": "^3.6.5",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "jsonwebtoken": "^8.5.1",
    "neo4j-driver": "^4.4.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/jsonwebtoken": "^8.5.8",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.5",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.2"
  }
}
