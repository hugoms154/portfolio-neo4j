{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prebuild":"rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyup 'src/**/*.graphql' 'dist/'",
    "start": "node dist/main/index.js",
    "dev": "tsnd ./src/main/index.ts --respawn --transpileOnly",
    "dev:debug": "DEBUG=@neo4j/graphql:* tsnd ./src/main/index.ts --respawn --transpileOnly",
    "core-api:generate-types": "GENERATE=true npx ts-node --project ./tsconfig.json ./src/main/scripts/generate-types.ts"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.6",
    "@neo4j/graphql": "^3.0.2",
    "@neo4j/graphql-ogm": "^3.0.2",
    "apollo-server": "^3.6.5",
    "apollo-server-core": "^3.6.5",
    "apollo-server-express": "^3.6.5",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "neo4j-driver": "^4.4.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  }
}
